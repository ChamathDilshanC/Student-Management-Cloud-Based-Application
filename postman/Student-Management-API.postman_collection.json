                }
              ],
              "body": "{\n  \"id\": 1,\n  \"fName\": \"Kamal\",\n  \"lName\": \"Perera\",\n  \"contact\": \"0771234567\",\n  \"address\": \"55 Temple Road, Nugegoda\",\n  \"picture\": \"/uploads/students/a1b2c3d4-uuid.jpg\"\n}"
